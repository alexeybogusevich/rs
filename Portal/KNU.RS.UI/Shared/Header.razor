@inherits HeaderBase

<div class="header">
    <div class="header-left">
        <a href="/main" class="logo">
            <img src="img/logo.png" width="35" height="35" alt=""> <span>Реабілітація</span>
        </a>
    </div>
    <a id="toggle_btn" href="javascript:void(0);"><i class="fa fa-bars"></i></a>
    <a id="mobile_btn" class="mobile_btn float-left" href="#sidebar"><i class="fa fa-bars"></i></a>
    <ul class="nav user-menu float-right">
        <li class="nav-item dropdown has-arrow">
            <a href="#" class="dropdown-toggle nav-link user-link" data-toggle="dropdown">
                <span class="user-img">
                    <img class="rounded-circle img-profile" src="@(GetPhotoURI())" width="30" height="30" alt="Профіль">
                    <span class="status online"></span>
                </span>
                <span></span>
            </a>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="profile.html">Профіль</a>
                <a class="dropdown-item" href="settings.html">Налаштування</a>
                <a class="dropdown-item" href="#" @onclick="LogoutAsync">Вийти</a>
            </div>
        </li>
    </ul>
    <div class="dropdown mobile-user-menu float-right">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
        <div class="dropdown-menu dropdown-menu-right">
            <a class="dropdown-item" href="profile.html">Інформація</a>
            <a class="dropdown-item" href="settings.html">Налаштування</a>
            <a class="dropdown-item" href="#" @onclick="LogoutAsync">Вийти</a>
        </div>
    </div>
</div>