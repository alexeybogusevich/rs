@using KNU.RS.Logic.Models.Patient
@page "/patients"

<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content">
            <div class="row">
                <div class="col-sm-4 col-3">
                    <h4 class="page-title">Пацієнти</h4>
                </div>
                <div class="col-sm-8 col-9 text-right m-b-20">
                    <a href="add-patient.html" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Додати</a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-border table-striped custom-table datatable mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Прізвище</th>
                                    <th>Ім'я</th>
                                    <th>По-батькові</th>
                                    <th>Народився</th>
                                    <th>Email</th>
                                    <th>Телефон</th>
                                    <th class="text-right">Дія</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var patient in Patients)
                                {
                                    <tr>
                                        <td>@(Counter++)</td>
                                        <td>@patient.LastName</td>
                                        <td>@patient.FirstName</td>
                                        <td>@patient.MiddleName</td>
                                        <td>@patient.Birthday</td>
                                        <td>@patient.Email</td>
                                        <td>@patient.PhoneNumber</td>
                                        <td class="text-right">
                                            <div class="dropdown dropdown-action">
                                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                                <div class="dropdown-menu dropdown-menu-right">
                                                    <a class="dropdown-item" href="edit-patient.html"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_patient"><i class="fa fa-trash-o m-r-5"></i> Видалити</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@code {
    private int Counter = 1;

    [Parameter]
    public List<PatientInfo> Patients { get; set; } = new List<PatientInfo>();
}
