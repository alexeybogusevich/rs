@inherits StudiesTableBase

<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-border table-striped custom-table mb-0">
                <thead>
                    <tr>
                        <th>Дата</th>
                        <th>Лікар</th>
                        <th>Тип</th>
                        <th>Результати</th>
                        <th class="text-right">Дія</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var study in Studies)
                    {
                        <tr>
                            <td>@study.DateTime.ToString("dd.MM.yyyy")</td>
                            <td>@study.DoctorFullName</td>
                            <td>@study.StudyTypeName</td>
                            <td><a href="#">Ознайомитись</a></td>
                            <td class="text-right">
                                <div class="dropdown dropdown-action">
                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item" href="edit-schedule.html"><i class="fa fa-book m-r-5"></i> Звіт</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
