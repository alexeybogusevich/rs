@inherits DoctorsGridBase
@using KNU.RS.Logic.Models.Doctor
 
<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-4 col-3">
                <h4 class="page-title">Лікарі</h4>
            </div>
            <div class="col-sm-8 col-9 text-right m-b-20">
                <a href="/newdoctor" class="btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Додати</a>
            </div>
        </div>
        <div class="row doctor-grid">
            @foreach (var doctor in Doctors)
            {
                <div class="col-md-4 col-sm-4  col-lg-3">
                    <div class="profile-widget">
                        <div class="doctor-img">
                            <a class="avatar" href="profile.html"><img alt="" src="@GetPhotoURI(doctor)"></a>
                        </div>
                        <div class="dropdown profile-action">
                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="edit-doctor.html"><i class="fa fa-pencil m-r-5"></i> Редагувати</a>
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_doctor"><i class="fa fa-trash-o m-r-5"></i> Видалити</a>
                            </div>
                        </div>
                        <h4 class="doctor-name text-ellipsis"><a href="profile.html">@doctor.ToString()</a></h4>
                        <div class="doc-prof">@doctor.QualificationName</div>
                        <div class="user-country">
                            <i class="fa fa-map-marker"></i> @doctor.ClinicName
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="see-all">
                    <a class="see-all-btn" href="javascript:void(0);">Завантажити ще</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="delete_doctor" class="modal fade delete-modal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center">
                <img src="img/sent.png" alt="" width="50" height="46">
                <h3>Ви впевнені, що бажаєте видалити цього лікаря з системи?</h3>
                <div class="m-t-20">
                    <a href="#" class="btn btn-white" data-dismiss="modal">Закрити</a>
                    <button type="submit" class="btn btn-danger">Видалити</button>
                </div>
            </div>
        </div>
    </div>
</div>
 
@code
{
    private string GetPhotoURI(DoctorInfo doctor)
    {
        if (doctor.HasPhoto)
        {
            return $"{StaticFileConstants.PhotosRequestPath}/{doctor.Id}.{Options.Value.Extension}";
        }

        return "img/user.jpg";
    }
}