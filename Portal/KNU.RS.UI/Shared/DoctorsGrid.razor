@inherits DoctorsGridBase
 
<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-4 col-3">
                <h4 class="page-title">Лікарі</h4>
            </div>
            <div class="col-sm-8 col-9 text-right m-b-20">
                <a href="/newdoctor" class="btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Додати</a>
            </div>
        </div>
        <div class="row doctor-grid">
            @foreach (var doctor in DisplayedDoctors)
            {
                <div class="col-md-4 col-sm-4  col-lg-3">
                    <div class="profile-widget">
                        <div class="doctor-img">
                            <a class="avatar" href="/viewdoctor/@doctor.UserId"><img alt="" src="@GetPhotoURI(doctor)"></a>
                        </div>
                        <div class="dropdown profile-action">
                            <a href="javascript:void(0)" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="/editdoctor/@doctor.UserId"><i class="fa fa-pencil m-r-5"></i> Редагувати</a>
                                <a class="dropdown-item" href="javascript:void(0)" data-toggle="modal" data-target="#delete_doctor" @onclick="() => AssignDoctorToDelete(doctor)"><i class="fa fa-trash-o m-r-5"></i> Видалити</a>
                            </div>
                        </div>
                        <h4 class="doctor-name text-ellipsis"><a href="/viewdoctor/@doctor.UserId">@doctor.ToString()</a></h4>
                        <div class="doc-prof">@doctor.QualificationName</div>
                        <div class="user-country">
                            <i class="fa fa-map-marker"></i> @doctor.ClinicName
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="see-all">
                    <a class="see-all-btn" href="javascript:void(0)" @onclick="LoadMore">Завантажити ще</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="delete_doctor" class="modal fade delete-modal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center">
                <img src="img/sent.png" alt="" width="50" height="46">
                <h3>Ви впевнені, що бажаєте видалити цього лікаря з системи?</h3>
                <div class="m-t-20">
                    <a href="javascript:void(0)" class="btn btn-white" data-dismiss="modal" @onclick="ClearDoctorToDelete">Ні</a>
                    <button type="submit" class="btn btn-danger" data-dismiss="modal" @onclick="async () => await DeleteAsync()">Так</button>
                </div>
            </div>
        </div>
    </div>
</div>