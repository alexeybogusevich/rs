@page "/"
@page "/signin"
@inherits SignInBase
@inject NavigationManager navManager
@layout SigninLayout

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <!--[if lt IE 9]>
        <script src="assets/js/html5shiv.min.js"></script>
        <script src="assets/js/respond.min.js"></script>
    <![endif]-->
    <title>Система реабілітації КНУ | Вхід</title>
</head>

<body>
    <div class=" ">
        <div class="main-wrapper account-wrapper">
            <div class="account-page">
                <div class="account-center">
                    <div class="account-box">
                        @*<form action="http://dreamguys.co.in/preclinic/template/index.html" class="form-signin">*@
                        <div class="account-logo">
                            <img src="images/shared/knu.png" width="130" height="130" alt="КНУ">
                        </div>
                        <EditForm Model="@LoginModel" OnValidSubmit="@LoginAsync">
                            <DataAnnotationsValidator/>
                            <div class="form-group">
                                <label>Email</label>
                                <InputText type="email" @bind-Value="LoginModel.Email" autofocus="" class="form-control" />
                                <ValidationMessage For="@(() => LoginModel.Email)" />
                            </div>
                            <div class="form-group">
                                <label>Пароль</label>
                                <InputText type="password" @bind-Value="LoginModel.Password" class="form-control form-control-placeholder" />
                                <ValidationMessage For="@(() => LoginModel.Password)" />
                            </div>
                            <div class="form-group text-right">
                                <a href="forgot-password.html">Забули пароль?</a>
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-primary account-btn">Увійти</button>
                            </div>
                        </EditForm>
                        @*</form>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>



