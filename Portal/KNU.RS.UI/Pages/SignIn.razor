@page "/signin"

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Система реабілітації КНУ | Вхід</title>
</head>

<body>
    <div class="absoluteCenter">
        <div class="wrapper fadeInDown">
            <div id="formContent">
                <!-- Tabs Titles -->
                <h2 class="active"> Вхід в систему </h2>

                <!-- Login Form -->
                <form>
                    <input type="text" id="login" class="fadeIn second" name="login" placeholder="логін">
                    <input type="text" id="password" class="fadeIn third" name="login" placeholder="пароль">
                    <input type="submit" class="fadeIn fourth" value="Увійти">
                </form>

            </div>
        </div>
    </div>

    <footer id="footerPrivacy">
        <p class="col-md-6">© 2021 - Всі права захищені.</p>
    </footer>

</body>
</html>



