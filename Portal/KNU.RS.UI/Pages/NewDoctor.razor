@page "/newdoctor"
@using KNU.RS.Logic.Services.QualificationService
@using KNU.RS.Data.Models 

@inject IQualificationService qualificationService
@inject IJSRuntime JsRuntime 

@inherits NewDoctorBase

@attribute [Authorize]

@if (IsLoading)
{
    <div class="spinner"></div>
}
else
{
    <div class="main-wrapper">
        <Header></Header>
        <Sidebar></Sidebar>
        <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <h4 class="page-title">Новий лікар</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <EditForm Model="@RegistrationModel" OnValidSubmit="@SaveDoctorAsync">
                            <DataAnnotationsValidator />
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Ім'я <span class="text-danger">*</span></label>
                                        <InputText @bind-Value="RegistrationModel.FirstName" autofocus="" class="form-control" />
                                        <ValidationMessage For="@(() => RegistrationModel.FirstName)" />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Прізвище<span class="text-danger">*</span></label>
                                        <InputText @bind-Value="RegistrationModel.LastName" autofocus="" class="form-control" />
                                        <ValidationMessage For="@(() => RegistrationModel.LastName)" />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>По-батькові <span class="text-danger">*</span></label>
                                        <InputText @bind-Value="RegistrationModel.MiddleName" autofocus="" class="form-control" />
                                        <ValidationMessage For="@(() => RegistrationModel.MiddleName)" />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Email <span class="text-danger">*</span></label>
                                        <InputText @bind-Value="RegistrationModel.Email" autofocus="" class="form-control" />
                                        <ValidationMessage For="@(() => RegistrationModel.Email)" />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Дата народження</label>
                                        <div class="cal-icon">
                                            <InputDate @bind-Value="RegistrationModel.Birthday" autofocus="" class="form-control datetimepicker" />
                                            <ValidationMessage For="@(() => RegistrationModel.Birthday)" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group gender-select">
                                        <label class="gen-label">Стать:<span class="text-danger">*</span></label>
                                        <div class="form-check-inline">
                                            <label class="form-check-label">
                                                <input type="radio" name="gender" class="form-check-input">Чоловіча
                                            </label>
                                        </div>
                                        <div class="form-check-inline">
                                            <label class="form-check-label">
                                                <input type="radio" name="gender" class="form-check-input">Жіноча
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label>Адреса</label>
                                                <InputText @bind-Value="RegistrationModel.Address" autofocus="" class="form-control" />
                                                <ValidationMessage For="@(() => RegistrationModel.Address)" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Номер телефону </label>
                                        <InputText @bind-Value="RegistrationModel.PhoneNumber" autofocus="" class="form-control" />
                                        <ValidationMessage For="@(() => RegistrationModel.PhoneNumber)" />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Фото</label>
                                        <div class="profile-upload">
                                            <div class="upload-img">
                                                <img alt="" src="img/user.jpg">
                                            </div>
                                            <div class="upload-input">
                                                <InputFile OnChange="@AssignPhoto" autofocus="" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6 col-lg-3">
                                <div class="form-group">
                                    <label>Посада<span class="text-danger">*</span></label>
                                    <select class="form-control select" @bind="RegistrationModel.QualificationId" title="Оберіть зі списку">
                                        @foreach (var qualification in Qualifications)
                                        {
                                            <option value="@qualification.Id">@qualification.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Біографія</label>
                                <InputTextArea @bind-Value="RegistrationModel.Biography" autofocus="" class="form-control" rows="3" cols="30" />
                                <ValidationMessage For="@(() => RegistrationModel.Biography)" />
                            </div>
                            <div class="m-t-20 text-center">
                                <button class="btn btn-primary submit-btn">Зберегти</button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="sidebar-overlay" data-reff=""></div>
    }

@code {
    private bool IsLoading { get; set; } = true;

    private IEnumerable<Qualification> Qualifications { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Qualifications = await qualificationService.GetAsync();
        IsLoading = false;
    }

    private void AssignPhoto(InputFileChangeEventArgs e)
    {
        RegistrationModel.Photo = e.File;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await JsRuntime.InvokeVoidAsync(JSExtensionMethods.SetSelect2);
    }
}
